ENV['RCT_NEW_ARCH_ENABLED'] = '1'

# Resolve react_native_pods.rb with node to allow for hoisting
require Pod::Executable.execute_command('node', ['-p',
  'require.resolve(
    "react-native/scripts/react_native_pods.rb",
    {paths: [process.argv[1]]},
  )', __dir__]).strip

platform :ios, min_ios_version_supported
prepare_react_native_project!

linkage = ENV['USE_FRAMEWORKS']
if linkage != nil
  Pod::UI.puts "Configuring Pod with #{linkage}ally linked Frameworks".green
  use_frameworks! :linkage => linkage.to_sym
end

target 'SherpaOnnxSttExample' do
  config = use_native_modules!

  use_react_native!(
    :path => config[:reactNativePath],
    # An absolute path to your application root.
    :app_path => "#{Pod::Config.instance.installation_root}/.."
  )

  post_install do |installer|
    react_native_post_install(
      installer,
      config[:reactNativePath],
      :mac_catalyst_enabled => false,
      # :ccache_enabled => true
    )
    
    # Configure sherpa-onnx linking with force_load
    # This ensures all symbols from the static library are included
    puts "\n[SherpaOnnxStt] ========================================"
    puts "[SherpaOnnxStt] Configuring linker flags for sherpa-onnx..."
    
    # Find the SherpaOnnxStt pod
    sherpa_pod = installer.pod_targets.find { |t| t.name == 'SherpaOnnxStt' }
    
    unless sherpa_pod
      puts "[SherpaOnnxStt] WARNING: Pod target not found!"
      puts "[SherpaOnnxStt] Available pod targets: #{installer.pod_targets.map(&:name).join(', ')}"
      puts "[SherpaOnnxStt] ========================================"
      next
    end
    
    sherpa_pod_path = installer.sandbox.pod_dir('SherpaOnnxStt').to_s
    puts "[SherpaOnnxStt] Pod path: #{sherpa_pod_path}"
    
    xcframework_path = File.join(sherpa_pod_path, 'ios', 'Frameworks', 'sherpa_onnx.xcframework')
    device_lib = File.join(xcframework_path, 'ios-arm64', 'libsherpa-onnx.a')
    simulator_lib = File.join(xcframework_path, 'ios-arm64_x86_64-simulator', 'libsherpa-onnx.a')
    
    puts "[SherpaOnnxStt] XCFramework path: #{xcframework_path}"
    puts "[SherpaOnnxStt] Device lib exists: #{File.exist?(device_lib)}"
    puts "[SherpaOnnxStt] Simulator lib exists: #{File.exist?(simulator_lib)}"
    
    unless File.exist?(xcframework_path)
      puts "[SherpaOnnxStt] ERROR: XCFramework not found!"
      puts "[SherpaOnnxStt] ========================================"
      next
    end
    
    # Find the main app target in the main Xcode project and add force_load
    main_project_path = File.join(installer.sandbox.root.parent, 'SherpaOnnxSttExample.xcodeproj')
    puts "[SherpaOnnxStt] Main project path: #{main_project_path}"
    
    if File.exist?(main_project_path)
      puts "[SherpaOnnxStt] Patching main Xcode project with force_load..."
      
      main_project = Xcodeproj::Project.open(main_project_path)
      
      main_project.targets.each do |target|
        next unless target.name == 'SherpaOnnxSttExample'
        puts "[SherpaOnnxStt] Found target: #{target.name}"
        
        target.build_configurations.each do |build_config|
          # Get existing OTHER_LDFLAGS
          existing_flags = build_config.build_settings['OTHER_LDFLAGS']
          if existing_flags.nil?
            existing_flags = ['$(inherited)']
          elsif existing_flags.is_a?(String)
            existing_flags = [existing_flags]
          end
          
          # Add force_load for the appropriate platform
          # Since we can't set conditionals here, we add both and let the linker figure it out
          # The linker will warn about the missing architecture but still link the correct one
          
          # Instead of conditionals, set platform-specific build settings
          build_config.build_settings['OTHER_LDFLAGS[sdk=iphoneos*]'] = 
            "$(inherited) -force_load \"#{device_lib}\""
          build_config.build_settings['OTHER_LDFLAGS[sdk=iphonesimulator*]'] = 
            "$(inherited) -force_load \"#{simulator_lib}\""
          
          puts "[SherpaOnnxStt]   #{build_config.name}: Added platform-specific force_load"
        end
      end
      
      main_project.save
      puts "[SherpaOnnxStt] Main project saved with force_load settings"
    else
      puts "[SherpaOnnxStt] WARNING: Main project not found at #{main_project_path}"
    end
    
    # Also patch the xcconfig files as a fallback
    pods_dir = installer.sandbox.root
    xcconfig_pattern = File.join(pods_dir, 'Target Support Files', 'Pods-SherpaOnnxSttExample', '*.xcconfig')
    xcconfig_paths = Dir.glob(xcconfig_pattern)
    
    puts "[SherpaOnnxStt] Patching #{xcconfig_paths.length} xcconfig files..."
    
    xcconfig_paths.each do |xcconfig_path|
      filename = File.basename(xcconfig_path)
      content = File.read(xcconfig_path)
      
      # Skip if already patched
      next if content.include?('SherpaOnnxStt: force_load')
      
      # Find the base OTHER_LDFLAGS
      base_ldflags_match = content.match(/^OTHER_LDFLAGS\s*=\s*(.+)$/)
      next unless base_ldflags_match
      
      base_ldflags = base_ldflags_match[1].strip
      
      # Remove any existing conditional OTHER_LDFLAGS
      content = content.gsub(/^OTHER_LDFLAGS\[sdk=.*\].*\n/, '')
      
      # Add the conditional force_load settings
      content += "\n"
      content += "// SherpaOnnxStt: force_load for sherpa-onnx static library\n"
      content += "OTHER_LDFLAGS[sdk=iphoneos*] = #{base_ldflags} -force_load \"#{device_lib}\"\n"
      content += "OTHER_LDFLAGS[sdk=iphonesimulator*] = #{base_ldflags} -force_load \"#{simulator_lib}\"\n"
      
      File.write(xcconfig_path, content)
      puts "[SherpaOnnxStt]   Patched xcconfig: #{filename}"
    end
    
    puts "[SherpaOnnxStt] Configuration complete"
    puts "[SherpaOnnxStt] ========================================"
  end
end
