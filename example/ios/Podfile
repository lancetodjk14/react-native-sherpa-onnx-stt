ENV['RCT_NEW_ARCH_ENABLED'] = '1'

# Resolve react_native_pods.rb with node to allow for hoisting
require Pod::Executable.execute_command('node', ['-p',
  'require.resolve(
    "react-native/scripts/react_native_pods.rb",
    {paths: [process.argv[1]]},
  )', __dir__]).strip

platform :ios, min_ios_version_supported
prepare_react_native_project!

linkage = ENV['USE_FRAMEWORKS']
if linkage != nil
  Pod::UI.puts "Configuring Pod with #{linkage}ally linked Frameworks".green
  use_frameworks! :linkage => linkage.to_sym
end

target 'SherpaOnnxSttExample' do
  config = use_native_modules!

  use_react_native!(
    :path => config[:reactNativePath],
    # An absolute path to your application root.
    :app_path => "#{Pod::Config.instance.installation_root}/.."
  )

  post_install do |installer|
    react_native_post_install(
      installer,
      config[:reactNativePath],
      :mac_catalyst_enabled => false,
      # :ccache_enabled => true
    )
    
    # Debug: Find paths for sherpa_onnx XCFramework and SherpaOnnxStt pod
    puts "\n[DEBUG] ========================================"
    puts "[DEBUG] Searching for sherpa_onnx XCFramework and SherpaOnnxStt pod paths..."
    STDERR.puts "\n[DEBUG] ========================================"
    STDERR.puts "[DEBUG] Searching for sherpa_onnx XCFramework and SherpaOnnxStt pod paths..."
    
    # Find SherpaOnnxStt pod installation path
    sherpa_pod_path = nil
    pod_spec = installer.pod_targets.find { |t| t.name == 'SherpaOnnxStt' }
    if pod_spec
      # Use sandbox to get pod directory
      sherpa_pod_path = installer.sandbox.pod_dir('SherpaOnnxStt').to_s
      puts "[DEBUG] SherpaOnnxStt pod path: #{sherpa_pod_path}"
      STDERR.puts "[DEBUG] SherpaOnnxStt pod path: #{sherpa_pod_path}"
      
      # Get PODS_TARGET_SRCROOT relative path
      pods_root = Pod::Config.instance.installation_root
      if File.exist?(sherpa_pod_path)
        relative_path = Pathname.new(sherpa_pod_path).relative_path_from(Pathname.new(pods_root)).to_s
        puts "[DEBUG] PODS_TARGET_SRCROOT would be: #{relative_path}"
        STDERR.puts "[DEBUG] PODS_TARGET_SRCROOT would be: #{relative_path}"
      end
    else
      puts "[DEBUG] SherpaOnnxStt pod target not found"
      STDERR.puts "[DEBUG] SherpaOnnxStt pod target not found"
    end
    
    # Search for XCFramework in various possible locations
    possible_framework_paths = []
    
    # Path 1: Relative to pod root
    if sherpa_pod_path
      possible_framework_paths << File.join(sherpa_pod_path, 'ios', 'Frameworks', 'sherpa_onnx.xcframework')
      possible_framework_paths << File.join(sherpa_pod_path, '..', '..', 'ios', 'Frameworks', 'sherpa_onnx.xcframework')
    end
    
    # Path 2: Relative to Pods root
    pods_root = Pod::Config.instance.installation_root
    possible_framework_paths << File.join(pods_root, '..', '..', 'ios', 'Frameworks', 'sherpa_onnx.xcframework')
    possible_framework_paths << File.join(pods_root, 'SherpaOnnxStt', 'ios', 'Frameworks', 'sherpa_onnx.xcframework')
    
    # Path 3: Absolute path from example directory
    example_root = File.dirname(__dir__)
    possible_framework_paths << File.join(example_root, '..', 'ios', 'Frameworks', 'sherpa_onnx.xcframework')
    
    puts "[DEBUG] Checking possible XCFramework paths:"
    STDERR.puts "[DEBUG] Checking possible XCFramework paths:"
    framework_found_path = nil
    possible_framework_paths.each do |path|
      expanded_path = File.expand_path(path)
      exists = File.exist?(expanded_path)
      status = exists ? "EXISTS" : "NOT FOUND"
      puts "  [#{status}]: #{expanded_path}"
      STDERR.puts "  [#{status}]: #{expanded_path}"
      framework_found_path = expanded_path if exists && framework_found_path.nil?
    end
    
    if framework_found_path
      puts "[DEBUG] XCFramework found at: #{framework_found_path}"
      STDERR.puts "[DEBUG] XCFramework found at: #{framework_found_path}"
    else
      puts "[DEBUG] XCFramework not found in any checked location"
      STDERR.puts "[DEBUG] XCFramework not found in any checked location"
    end
    
    puts "[DEBUG] Pods installation root: #{pods_root}"
    puts "[DEBUG] Example root: #{example_root}"
    STDERR.puts "[DEBUG] Pods installation root: #{pods_root}"
    STDERR.puts "[DEBUG] Example root: #{example_root}"
    puts "[DEBUG] ========================================\n"
    STDERR.puts "[DEBUG] ========================================\n"
    
    # Ensure sherpa_onnx XCFramework is properly linked
    # This is necessary because static libraries in XCFrameworks may not be auto-linked by CocoaPods
    installer.pods_project.targets.each do |target|
      if target.name == 'SherpaOnnxStt'
        target.build_configurations.each do |config|
          # Based on debug output:
          # - PODS_TARGET_SRCROOT is ../.. (relative to Pods root at example/ios)
          # - Framework is at ios/Frameworks/sherpa_onnx.xcframework relative to root
          # - So the path should be $(PODS_TARGET_SRCROOT)/ios/Frameworks
          
          # Add framework search path
          framework_search_paths = config.build_settings['FRAMEWORK_SEARCH_PATHS'] || ['$(inherited)']
          framework_search_paths << '"$(PODS_TARGET_SRCROOT)/ios/Frameworks"'
          config.build_settings['FRAMEWORK_SEARCH_PATHS'] = framework_search_paths.uniq
          
          puts "[DEBUG] Added FRAMEWORK_SEARCH_PATHS: $(PODS_TARGET_SRCROOT)/ios/Frameworks"
          STDERR.puts "[DEBUG] Added FRAMEWORK_SEARCH_PATHS: $(PODS_TARGET_SRCROOT)/ios/Frameworks"
          
          # Force link the static library from XCFramework
          # For static libraries in XCFrameworks, we need to use -force_load with the .a file
          # The XCFramework contains libsherpa-onnx.a in each architecture slice
          # We need to link it explicitly since vendored_frameworks may not auto-link static libs
          
          # Try using -framework first (works if CocoaPods handles it)
          other_ldflags = config.build_settings['OTHER_LDFLAGS'] || ['$(inherited)']
          other_ldflags << '-framework sherpa_onnx'
          
          # Also add -force_load as fallback for static library linking
          # This ensures all symbols are included even if -framework doesn't work
          # The path will be resolved by Xcode based on FRAMEWORK_SEARCH_PATHS
          framework_lib_path = '$(PODS_TARGET_SRCROOT)/ios/Frameworks/sherpa_onnx.xcframework/$(PLATFORM_NAME)/libsherpa-onnx.a'
          other_ldflags << "-force_load \"#{framework_lib_path}\""
          
          config.build_settings['OTHER_LDFLAGS'] = other_ldflags.uniq
          
          puts "[DEBUG] Added OTHER_LDFLAGS: -framework sherpa_onnx and -force_load"
          STDERR.puts "[DEBUG] Added OTHER_LDFLAGS: -framework sherpa_onnx and -force_load"
          puts "[DEBUG] Force load path: #{framework_lib_path}"
          STDERR.puts "[DEBUG] Force load path: #{framework_lib_path}"
        end
      end
    end
    
    # Also ensure the framework is linked in the app target
    # This is necessary because static libraries need to be linked at the app level
    installer.pods_project.targets.each do |target|
      if target.name == 'Pods-SherpaOnnxSttExample'
        target.build_configurations.each do |config|
          # Add framework search path to app target as well
          framework_search_paths = config.build_settings['FRAMEWORK_SEARCH_PATHS'] || ['$(inherited)']
          framework_search_paths << '"$(PODS_TARGET_SRCROOT)/../../ios/Frameworks"'
          config.build_settings['FRAMEWORK_SEARCH_PATHS'] = framework_search_paths.uniq
          
          puts "[DEBUG] Added FRAMEWORK_SEARCH_PATHS to app target: $(PODS_TARGET_SRCROOT)/../../ios/Frameworks"
          STDERR.puts "[DEBUG] Added FRAMEWORK_SEARCH_PATHS to app target: $(PODS_TARGET_SRCROOT)/../../ios/Frameworks"
        end
      end
    end
    
    # Also modify the actual app target (SherpaOnnxSttExample) in the Xcode project
    # This is critical because the app target needs to link the framework
    example_root = File.dirname(__dir__)
    app_project_path = File.join(example_root, 'SherpaOnnxSttExample.xcodeproj')
    
    if File.exist?(app_project_path)
      begin
        require 'xcodeproj'
        app_project = Xcodeproj::Project.open(app_project_path)
      
      app_project.targets.each do |target|
        if target.name == 'SherpaOnnxSttExample'
          puts "[DEBUG] Modifying app target: #{target.name}"
          STDERR.puts "[DEBUG] Modifying app target: #{target.name}"
          
          target.build_configurations.each do |config|
            # Add framework search path
            framework_search_paths = config.build_settings['FRAMEWORK_SEARCH_PATHS'] || ['$(inherited)']
            # Path relative to app project root (example/ios)
            framework_search_paths << '"$(SRCROOT)/../../ios/Frameworks"'
            config.build_settings['FRAMEWORK_SEARCH_PATHS'] = framework_search_paths.uniq
            
            puts "[DEBUG] Added FRAMEWORK_SEARCH_PATHS to app target: $(SRCROOT)/../../ios/Frameworks"
            STDERR.puts "[DEBUG] Added FRAMEWORK_SEARCH_PATHS to app target: $(SRCROOT)/../../ios/Frameworks"
            
            # Add linker flags to link the static library
            other_ldflags = config.build_settings['OTHER_LDFLAGS'] || ['$(inherited)']
            other_ldflags << '-framework sherpa_onnx'
            
            # Force load the static library for the simulator architecture
            # For x86_64 simulator: ios-arm64_x86_64-simulator
            # For arm64 simulator: ios-arm64_x86_64-simulator
            # For device: ios-arm64
            framework_lib_path = '$(SRCROOT)/../../ios/Frameworks/sherpa_onnx.xcframework/$(PLATFORM_NAME)/libsherpa-onnx.a'
            other_ldflags << "-force_load \"#{framework_lib_path}\""
            
            config.build_settings['OTHER_LDFLAGS'] = other_ldflags.uniq
            
            puts "[DEBUG] Added OTHER_LDFLAGS to app target: -framework sherpa_onnx and -force_load"
            STDERR.puts "[DEBUG] Added OTHER_LDFLAGS to app target: -framework sherpa_onnx and -force_load"
            puts "[DEBUG] Force load path: #{framework_lib_path}"
            STDERR.puts "[DEBUG] Force load path: #{framework_lib_path}"
          end
          
          app_project.save
          puts "[DEBUG] Saved app project"
          STDERR.puts "[DEBUG] Saved app project"
        end
      end
      rescue LoadError => e
        puts "[DEBUG] Could not load xcodeproj gem: #{e.message}"
        STDERR.puts "[DEBUG] Could not load xcodeproj gem: #{e.message}"
        puts "[DEBUG] Skipping app target modification"
        STDERR.puts "[DEBUG] Skipping app target modification"
      rescue => e
        puts "[DEBUG] Error modifying app target: #{e.message}"
        STDERR.puts "[DEBUG] Error modifying app target: #{e.message}"
        puts "[DEBUG] #{e.backtrace.first}"
        STDERR.puts "[DEBUG] #{e.backtrace.first}"
      end
    else
      puts "[DEBUG] App project not found at: #{app_project_path}"
      STDERR.puts "[DEBUG] App project not found at: #{app_project_path}"
    end
  end
end
